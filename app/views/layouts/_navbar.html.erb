<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  <div class="container">

    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to 'LHU language', root_url, class: 'navbar-brand' %>
    </div>

    <div class="navbar-collapse collapse">

      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.name %>
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu" role="menu">
              <li>
                <%= link_to user_notifications_path(current_user) do%>
                  通知&nbsp;
                  <% unless current_user.notifications.uncheck.blank? %>
                    <span class="badge"><%= current_user.notifications.uncheck.count %></span>
                  <% end %>
                <% end %>
              </li>
              <li><%= link_to '我要交換語言', new_demand_path %></li>
              <li class="divider"></li>
              <li><%= link_to '查看個人資料', current_user %></li>
              <li><%= link_to '編輯個人資料', edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li><%= link_to '登出', logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <%# nav_link '註冊', signup_path %>
          <%# nav_link '登入', login_path %>
          <li><%= link_to '註冊', signup_path %></li>
          <li><%= link_to '登入', login_path %></li>
        <% end %>
      </ul>

    </div><!--/.nav-collapse -->
  </div><!--/.container-fluid -->
</div>