<div class="container">
  <div class="col-md-8 col-md-offset-2">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= form_for @demand_application, url: apply_demand_path(@demand) do |f| %>
          <div class="form-group">
            <%= f.label :info, 'Please introduce yourself', class: 'control-label' %>
            <%= f.text_area :info, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.submit 'Apply', class: 'btn btn-success pull-right' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>