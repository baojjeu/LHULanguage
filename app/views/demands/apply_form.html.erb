<h2></h2>
<div class="container">
  <div class="col-md-8 col-md-offset-2">
    <%= form_for @demand_application, url: apply_demand_path(@demand) do |f| %>
      <div class="form-group">
        <%= f.label :info, 'Before applying this demand...', class: 'control-label' %>
        <%= f.text_area :info, class: 'form-control', placeholder: 'Introduce yourself', rows: 10 %>
      </div>

      <div class="form-group pull-right">
        (づ￣ ³￣)づ
        <%= f.submit ' Apply', class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>