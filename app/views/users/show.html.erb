<div class="user-header">
  <%= gravatar_for @user, size: 134, class: 'user-avatar' %>
  <h2><%= display_username @user %></h2>

  <div class="container">
    <%= render 'nav' %>
  </div>
</div>

<div class="container">
  <div class="col-md-6">
    <h3>Recently demands</h3>
    <div class="panel panel-default">
      <div class="panel-body">
        <table class="table table-hover <%= 'empty-demands' if @user.demands.blank? %>">
          <thead>
            <tr>
              <th>Date</th>
              <th>Language</th>
              <th>Applicants</th>
            </tr>
          </thead>

          <tbody>
            <% @user.demands.each do |demand| %>
              <tr class="show-user-demand">
                <td><div class="neat-padding"><%= demand.created_at.strftime("%Y-%m-%d") %></div></td>
                <td>
                  <%= link_to demand do %>
                    <%= image_tag "flags/thumbs/#{demand.language.flag}" %>
                  <% end %>
                </td>
                <td>
                  <div class="neat-padding">
                    <%= demand.applicants.count %>
                  </div>
                </td>
              </tr>
            <% end %>
            <%= "There are no demands here." if @user.demands.blank? %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <h3>Applied demands</h3>
    <div class="panel panel-default">
      <div class="panel-body">
        <table class="table table-hover <%= 'empty-demands' if @user.applied_demands.blank? %>">
          <thead>
            <tr>
              <th>Date</th>
              <th>Language</th>
              <th>Applicants</th>
            </tr>
          </thead>

          <tbody>
            <% @user.applied_demands.each do |demand| %>
              <tr class="show-user-demand">
                <td><div class="neat-padding"><%= demand.created_at.strftime("%Y-%m-%d") %></div></td>
                <td>
                  <%= link_to demand do %>
                    <%= image_tag "flags/thumbs/#{demand.language.flag}" %>
                  <% end %>
                </td>
                <td>
                  <div class="neat-padding">
                    <%= demand.applicants.count %>
                  </div>
                </td>
              </tr>
            <% end %>
            <%= "There are no applied demands here." if @user.applied_demands.blank? %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>